# This is a journal config file

# Journal base directory
export JOURNAL="$HOME/Documents/journal"

# Make new journal entry
entry () {
	mkdir -p "$JOURNAL/$(date +%Y/%b/)"
	touch "$_$(date +%d)"
	e "$_"
}

# Create new short entry
zettel () {
	read name"?name: "
	d=$(date "+%Y%m%d%H%M%S")
	dir="$JOURNAL/zettel"
	mkdir -p "$dir"
	touch "$dir/$d-$name"
	e "$_"
}


# General aliases
alias \
    vim='nvim' \
    e="$EDITOR" \
    ctags="/usr/local/bin/ctags" \
    ducks='du -cks * | sort -rn | head -15' \
    lock='pmset displaysleepnow' \
    ls='ls -G' \
    ll='ls -laG'

# PhD folders aliases
alias \
    cdth='cd ~/Documents/_files/_research/monograph/body/thesis' \
    cdtr='cd ~/Documents/_files/_research/monograph/material/transcript' \
    cdp='cd ~/Documents/_files/_research/monograph/material/photos' \
    cdr='cd ~/Documents/_files/_research/monograph/phd_references' \
    bib='vim ~/Documents/_files/_research/monograph/body/thesis/local_bibliography.bib'

# Coding aliases
alias \
    cdd='cd ~/Documents/python/dev/' \
    cdg='cd ~/.go/gopath/src' \
    cdj='cd ~/Documents/journal' \
    tje='touch "$(date +%Y/%b/%d)"'  # Create a fresh journal file entry

# Git aliases
alias \
    g='git' \
    ga='git add' \
    gb='git branch' \
    gc='git commit' \
    gch='git checkout' \
    gcl='git clone' \
    gd='git diff' \
    gds='git diff --staged' \
    gf='git fetch' \
    glg="git log --graph --abbrev-commit --decorate --format=format:'%C(bold green)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold yellow)(%ar)%C(reset)%C(auto)%d%C(reset)%n''       %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all" \
    gm='git merge' \
    gnb='git checkout -b' \
    gpl='git pull' \
    gplom='git pull origin master' \
    gpu='git push' \
    gre='git restore' \
    gres='git restore --staged .' \
    grm='git remote' \
    gstat='git status'

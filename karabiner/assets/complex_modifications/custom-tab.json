{
  "title": "Change Tab to either Tab or left Shift",
  "rules": [
	{
	  "description": "Post Tab if Tab is tapped, left Shift if held.",
	  "manipulators": [
        {
    "type": "basic",
    "from": {
        "key_code": "tab",
        "modifiers": {
            "optional": [
                "any"
            ]
        }
    },
    "to": [
        {
            "key_code": "left_shift",
            "lazy": true
        }
    ],
    "to_if_alone": [
        {
            "key_code": "tab"
        }
    ]
}
	  ]
	}
  ]
}
